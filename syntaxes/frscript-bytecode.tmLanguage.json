{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Frscript Bytecode",
  "scopeName": "source.frbc",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#labels"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#instruction-line"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "meta.c-import.comment.fr",
          "match": "^(# C import): (.*)$",
          "captures": {
            "1": {
              "name": "keyword.control.source.frbc"
            },
            "2": {
              "name": "string.unquoted.c-header.fr"
            }
          }
        },
        {
          "name": "meta.c-link.comment.fr",
          "match": "^(# Link): (.*)$",
          "captures": {
            "1": {
              "name": "keyword.control.source.frbc"
            },
            "2": {
              "name": "string.unquoted.c-header.fr"
            }
          }
        },
        {
          "name": "meta.comment.source-file.frbc",
          "match": "^\\s*(#\\s*source:)\\s*(.*)$",
          "captures": {
            "1": {
              "name": "keyword.control.source.frbc"
            },
            "2": {
              "name": "entity.name.filename.frbc"
            }
          }
        },
        {
          "name": "comment.line.number-sign.frbc",
          "match": "#.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "meta.line-directive.frbc",
          "match": "^\\s*(\\.line)\\s+(\\d+)\\s+(\".*\")$",
          "captures": {
            "1": {
              "name": "keyword.control.frbc"
            },
            "2": {
              "name": "constant.numeric.frbc"
            },
            "3": {
              "name": "comment.line.source.frbc"
            }
          }
        },
        {
          "name": "keyword.control.frbc",
          "match": "\\.[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "instruction-line": {
      "patterns": [
        {
          "name": "keyword.control.instruction.frbc",
          "match": "^\\s*[A-Z_][A-Z0-9_]*\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "support.function.frbc",
          "match": "\\b(?![A-Z_]+\\b)[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.label.frbc",
          "match": "^\\s*[a-zA-Z_][a-zA-Z0-9_]*:"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.frbc",
          "match": "\\b-?[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.frbc",
          "match": "\\b-?[0-9]+\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.frbc",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.frbc",
              "match": "\\\\(n|t|r|\\\\|\"|')"
            }
          ]
        }
      ]
    }
  }
}
