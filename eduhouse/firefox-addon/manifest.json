{
    "manifest_version": 2,
    "name": "Eduhouse Autopass",
    "version": "1.0",
    "description": "Automatically passes tests on EduHouse",
    "browser_specific_settings": {
        "gecko": {
            "id": "@eduhouse-autopass",
            "strict_min_version": "58.0"
        }
    },
    "permissions": [
        "activeTab",
        "tabs",
        "webNavigation",
        "*://*.eduhouse.fi/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["*://*.eduhouse.fi/*"],
            "js": ["content.js"],
            "all_frames": true,
            "run_at": "document_idle"
        }
    ]
}
