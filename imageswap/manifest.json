{
  "manifest_version": 2,
  "name": "Image Swapper",
  "version": "1.0",
  "description": "Swaps all images on web pages with a specified image across all sites",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "@image-swapper"
    }
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Image Swapper Settings"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}